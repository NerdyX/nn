{
  "name": "xrpl05",
  "description": "xrp ledger operating system",
  "engines": {
    "node": "^18.17.0 || ^20.3.0 || >=21.0.0"
  },
  "engines-annotation": "Mostly required by sharp which needs a Node-API v9 compatible runtime",
  "private": true,
  "latest": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "qwik build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.server": "qwik check-client src dist && vite build -c adapters/cloudflare-pages/vite.config.ts",
    "build.types": "tsc --incremental --noEmit",
    "deploy": "bun run build && wrangler pages deploy",
    "dev": "vite --mode ssr",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "lint": "eslint \"src/**/*.ts*\"",
    "preview": "bun run build && wrangler pages dev",
    "serve": "wrangler pages dev ./dist --compatibility-flags=nodejs_als",
    "start": "vite --open --mode ssr",
    "qwik": "qwik",
    "cf-typegen": "wrangler types"
  },
  "devDependencies": {
    "@builder.io/qwik": "^1.19.0",
    "@builder.io/qwik-city": "^1.19.0",
    "@qwikest/icons": "^0.0.13",
    "@cloudflare/workers-types": "^4.20260207.0",
    "@eslint/js": "latest",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.2.2",
    "@types/three": "^0.182.0",
    "autoprefixer": "^10.4.24",
    "eslint": "9.32.0",
    "eslint-plugin-qwik": "^1.19.0",
    "globals": "16.4.0",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "tailwindcss": "^4.1.18",
    "typescript": "5.4.5",
    "typescript-eslint": "8.38.0",
    "typescript-plugin-css-modules": "latest",
    "undici": "^7.21.0",
    "vite": "7.2.6",
    "vite-tsconfig-paths": "^4.3.2",
    "wrangler": "^3.114.17"
  },
  "dependencies": {
    "@joey-wallet/wc-client": "^1.0.4",
    "@ledgerhq/context-module": "^1.13.0",
    "@ledgerhq/device-transport-kit-react-native-ble": "^1.3.2",
    "@ledgerhq/device-transport-kit-react-native-hid": "^1.0.3",
    "@reown/appkit": "^1.8.17",
    "@reown/appkit-common": "^1.8.17",
    "@reown/appkit-universal-connector": "^1.8.17",
    "@tailwindcss/vite": "^4.1.18",
    "@types/jquery": "^3.5.33",
    "ethers": "^6.16.0",
    "globe.gl": "^2.45.0",
    "jquery": "^4.0.0",
    "three": "^0.182.0",
    "topojson-client": "^3.1.0",
    "xaman": "^1.0.0",
    "xrpl": "^4.5.0",
    "xumm": "^1.8.0"
  }
}
